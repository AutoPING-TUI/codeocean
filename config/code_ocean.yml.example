default: &default
  flowr:
    enabled: false
    answers_per_query: 3
  code_pilot:
    enabled: false
    url: //localhost:3000
  codeharbor:
    enabled: false
  codeocean_events:
    enabled: false
  prometheus_exporter:
    enabled: false
  runner_management:
    enabled: false
    strategy: poseidon
    url: https://runners.example.org
    ca_file: /example/certificates/ca.crt
    unused_runner_expiration_time: 180

development:
  <<: *default
  flowr:
    enabled: true
    answers_per_query: 3
  codeharbor:
    enabled: true
    url: https://codeharbor.openhpi.de

production:
  <<: *default
  prometheus_exporter:
    enabled: true

test:
  <<: *default
